@model IEnumerable<crud_web_app.Models.Client>

@{
    ViewData["Title"] = "Clients";
}

<h1>Clients</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Client</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@(client.Name)</td>
                <td>@(client.Email)</td>
                <td>@(client.PhoneNumber)</td>
                <td>@(client.Address)</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = client.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = client.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
